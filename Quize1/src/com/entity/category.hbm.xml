<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.entity.Category" dynamic-insert="true"
		dynamic-update="true">
		<id name="category_id" type="int">
			<generator class="assigned" />
		</id>
		<property name="category_name" length="50" 
			unique="true" />
		<property name="category_logo" length="50"
			unique="true" />
		<property name="category_desc" length="150" 
			unique="true" />
				
	</class>

</hibernate-mapping>
